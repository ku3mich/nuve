[*.cs]

file_header_template = Copyright (C) 2020 Serhii Kuzmychov (ku3mich@gmail.com)\nLicensed under the terms of the MIT license. See LICENCE for details.

dotnet_diagnostic.S3885.severity = none
# "static" fields should be initialized inline
dotnet_diagnostic.S3963.severity = none

# S3358: Ternary operators should not be nested
dotnet_diagnostic.S3358.severity = suggestion

# CS3021: Type or member does not need a CLSCompliant attribute because the assembly does not have a CLSCompliant attribute
dotnet_diagnostic.CS3021.severity = none

# S2699: Tests should include assertions
dotnet_diagnostic.S2699.severity = none

# S112: General exceptions should never be thrown
dotnet_diagnostic.S112.severity = none

# IDE0040: Add accessibility modifiers
dotnet_style_require_accessibility_modifiers = for_non_interface_members:none

# S1116: Empty statements should be removed
dotnet_diagnostic.S1116.severity = none

# S3925: "ISerializable" should be implemented correctly
dotnet_diagnostic.S3925.severity = none

dotnet_diagnostic.S125.severity = none
dotnet_diagnostic.IDE0055.severity = none

# due a lot of acronyms
dotnet_diagnostic.S101.severity = none
dotnet_diagnostic.S1134.severity = refactoring

# S1118: Utility classes should not have public constructors
dotnet_diagnostic.S1118.severity = none

# S1135: Track uses of "TODO" tags
dotnet_diagnostic.S1135.severity = none

indent_size = 4
indent_style = space

#### Naming styles ####
dotnet_naming_style.pascal_case.capitalization = pascal_case

dotnet_naming_symbols.private_field_readonly.applicable_kinds = field
dotnet_naming_symbols.private_field_readonly.applicable_accessibilities = public, private, protected, protected_internal, private_protected
dotnet_naming_symbols.private_field_readonly.required_modifiers = 

dotnet_naming_rule.private_field_readonly_should_be_pascal_case.severity = suggestion
dotnet_naming_rule.private_field_readonly_should_be_pascal_case.symbols = private_field_readonly
dotnet_naming_rule.private_field_readonly_should_be_pascal_case.style = pascal_case

csharp_style_var_elsewhere = false:silent
csharp_style_var_for_built_in_types = false:silent
csharp_style_var_when_type_is_apparent = false:silent

csharp_prefer_braces = false:silent
csharp_preserve_single_line_blocks = true:silent
csharp_preserve_single_line_statements = true:silent

csharp_style_expression_bodied_accessors = true:silent
csharp_style_expression_bodied_constructors = true:silent
csharp_style_expression_bodied_indexers = true:silent
csharp_style_expression_bodied_lambdas = true:silent
csharp_style_expression_bodied_local_functions = true:silent
csharp_style_expression_bodied_methods = true:silent
csharp_style_expression_bodied_operators = true:silent
csharp_style_expression_bodied_properties = true:silent
